{
  "name": "hermesp",
  "displayName": "HermESP",
  "description": "Extension for educational mycropython ESP coding",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:HermESPMainView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hermesp.flashMcu",
        "title": "Flash MCU",
        "icon": {
          "light": "media/flashing.svg",
          "dark": "media/flashing.svg"
        }
      },
      {
        "command": "hermesp.transferFile",
        "title": "Transfer File",
        "icon": {
          "light": "media/uebertragung.svg",
          "dark": "media/uebertragung.svg"
        }
      }
    ],
    "views": {
      "myExtensionSecondary": [
        {
          "id": "HermESPMainView",
          "name": "HermESPMainView",
          "type": "webview",
          "icon": "media/icon.svg"
        }
      ]
    },
    "viewsContainers": {
      "secondarySidebar": [
        {
          "id": "myExtensionSecondary",
          "title": "HermESP",
          "icon": "media/icon.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "hermesp.flashMcu",
          "when": "view == HermESPMainView",
          "group": "navigation"
        },
        {
          "command": "hermesp.transferFile",
          "when": "view == HermESPMainView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "serialport": "^13.0.0"
  }
}
